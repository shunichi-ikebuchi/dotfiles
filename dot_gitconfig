[user]
	name = Shunichi Ikebuchi
	email = shunichi@pigeonworks.net

[push]
	default = simple
	autoSetupRemote = true

[color]
	ui = auto
	diff = true

[core]
	excludesfile = ~/.gitignore_global
	pager = delta  # Enable after installing delta tool
	editor = vi
	autocrlf = false
	whitespace = blank-at-eol,blank-at-eof,space-before-tab

[alias]
	br = branch
	cancel = reset --soft HEAD^
	cm = commit
	cma = commit -a
	cmam = commit -am
	cmm = commit -m
	cmn = commit --allow-empty-message -m ''
	co = checkout
	df = diff
	di = diff --cached
	ft = fetch
	pu = push
	pl = pull
	plp = pull --prune
	st = status
	tmp = commit -a -m 'tmp'
	tr = log --graph --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	clcheck = clean -fd -n
	ap = add -p  # For interactive add

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[commit]
	gpgSign = true

[tag]
	gpgSign = true

[help]
	autocorrect = 10

[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	context = 10
	tool = difftastic  # Enable after installing difftastic tool

[interactive]
	diffFilter = delta --color-only  # Enable after installing delta tool

[delta]
	paging = always

[include]
	path = ~/.gitconfig.local
