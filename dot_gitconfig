[user]
	name = Shunichi Ikebuchi
	email = shunichi@pigeonworks.net

[push]
	default = simple
	autoSetupRemote = true

[color]
	ui = auto
	diff = true

[core]
	excludesfile = ~/.gitignore_global
	pager = delta  # Enable after installing delta tool
	editor = vi
	autocrlf = false
	whitespace = blank-at-eol,blank-at-eof,space-before-tab

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[commit]
	gpgsign = true

[tag]
	gpgsign = true

[help]
	autocorrect = 10

[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	context = 10
	tool = difftastic  # Enable after installing difftastic tool

[interactive]
	diffFilter = delta --color-only  # Enable after installing delta tool

[delta]
	syntax-theme = "Gruvbox Dark"
	side-by-side = true
	line-numbers = true
	paging = always

[gpg]
	program = gpg

# GitHub authentication: Use gh CLI
[credential "https://github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential

# Default credential helper for other services
[credential]
	helper = osxkeychain

[include]
	path = ~/.gitconfig.local
